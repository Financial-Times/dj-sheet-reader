root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = tab

[*.md]
trim_trailing_whitespace = false
indent_size = unset
indent_style = unset

[*.yml]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
